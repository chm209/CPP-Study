{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ 활성 파일 빌드",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}/**.cpp",
				"${fileDirname}/**.hpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "컴파일러: /usr/bin/clang++"
        }
    ],
    "version": "2.0.0"
}